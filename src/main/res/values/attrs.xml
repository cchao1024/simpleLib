<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--StateTextView-->
    <declare-styleable name="StateTextView">
        <!--text color-->
        <attr name="normalTextColor" format="color|reference"/>
        <attr name="pressedTextColor" format="color|reference"/>
        <attr name="unableTextColor" format="color|reference"/>

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference"/>
        <attr name="strokeDashGap" format="dimension|reference"/>
        <attr name="normalStrokeWidth" format="dimension|reference"/>
        <attr name="pressedStrokeWidth" format="dimension|reference"/>
        <attr name="unableStrokeWidth" format="dimension|reference"/>
        <attr name="normalStrokeColor" format="color|reference"/>
        <attr name="pressedStrokeColor" format="color|reference"/>
        <attr name="unableStrokeColor" format="color|reference"/>

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference"/>
        <attr name="pressedBackgroundColor" format="color|reference"/>
        <attr name="unableBackgroundColor" format="color|reference"/>

        <!--background radius-->
        <attr name="radius" format="dimension|reference"/>
        <attr name="round" format="boolean|reference"/>

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="LimitLinearLayout">
        <attr name="widthRatio" format="float"/>
        <attr name="heightRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="RowLayout">
        <attr name="android:verticalSpacing"/>
        <attr name="android:horizontalSpacing"/>
    </declare-styleable>

    <declare-styleable name="PullScrollView">
        <attr name="header" format="reference"/>
        <attr name="headerHeight" format="dimension"/>
        <attr name="headerVisibleHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PressedImageView">
        <attr name="pressedColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension"/>
        <attr name="stuckShadowDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PanningView">
        <attr name="panningDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="hideDrawable" format="reference"/>
        <attr name="showDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="DropEditText">
        <attr name="dropDrawable" format="integer"/>
    </declare-styleable>

    <!--可设置textViewDrawable的宽高-->
    <declare-styleable name="SizeText">
        <attr name="drawable_height" format="dimension"/>
        <attr name="drawable_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FieldStateLayout">
        <attr name="fieldHeight" format="dimension"/>
    </declare-styleable>

    <!--设置maxH的scrollView-->
    <declare-styleable name="maxHeightScrollView">
        <attr name="maxHeight" format="dimension"/>
    </declare-styleable>

    <!--带加载的toggleBtn-->
    <declare-styleable name="ProgressToggleButton">
        <attr name="onBackground" format="color|reference"/>
        <attr name="offBackground" format="color|reference"/>
        <attr name="text" format="string"/>
        <attr name="textPadding" format="dimension"/>
    </declare-styleable>
</resources>